{
  "name": "@apeks/bidi",
  "type": "module",
  "license": "MIT",
  "version": "0.1.0",
  "author": "Shubham Malviya",
  "description": "Fast, memory-efficient, spec-compliant JavaScript implementation of the Unicode Bidirectional Algorithm.",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write",
    "format:check": "prettier --check",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "dev": "tsc -w",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "bidi",
    "uba",
    "unicode",
    "bidirectional",
    "bidi-ts"
  ],
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.0"
}
